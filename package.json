{
  "name": "active-record-dashboard",
  "version": "0.0.0",
  "description": "Active Record Dashboard: Sharing your state in the team.",
  "main": "main.js",
  "scripts": {
    "tw": "tailwindcss -i ./src/input.css -o ./output.css --watch",
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist-mw": "electron-builder -mw",
    "app:dist-m": "electron-builder -m",
    "app:dist-w": "electron-builder -w"
  },
  "build": {
    "appId": "com.active-record-dashboard.app",
    "productName": "Active Record Dashboard",
    "mac": {
      "category": "Productivity"
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": "Kentaro Furukawa",
  "license": "MIT",
  "devDependencies": {
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "tailwindcss": "^3.0.24"
  }
}